{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["app/api/src/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "../../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}

